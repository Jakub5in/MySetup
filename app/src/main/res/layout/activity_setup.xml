<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SetupActivity" >

    <TextView
        android:id="@+id/text_setup_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="80dp"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/button_rear_suspension"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_backgrond"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/explodedraaw"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/explodedraaw"
        android:contentDescription="@string/background" />

    <Button
        android:id="@+id/button_delete_setup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_rear_suspension"
        android:layout_width="84dp"
        android:layout_height="90dp"
        android:backgroundTint="#4DFFFFFF"
        android:text="@string/damper"
        android:textColor="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button_front_suspension"
        app:layout_constraintEnd_toStartOf="@+id/button_front_suspension"
        app:strokeColor="@color/HollywoodCerise"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/button_front_suspension"
        android:layout_width="84dp"
        android:layout_height="90dp"
        android:backgroundTint="#4DFFFFFF"
        android:text="@string/fork"
        android:textColor="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/image_backgrond"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/HollywoodCerise"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/button_front_wheel"
        android:layout_width="84dp"
        android:layout_height="90dp"
        android:backgroundTint="#4DFFFFFF"
        android:text="@string/fTire"
        android:textColor="#00FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/button_front_suspension"
        app:layout_constraintTop_toBottomOf="@+id/button_front_suspension"
        app:strokeColor="@color/HollywoodCerise"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/button_rear_wheel"
        android:layout_width="84dp"
        android:layout_height="90dp"
        android:backgroundTint="#4DFFFFFF"
        android:text="@string/rTire"
        android:textColor="#00FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/button_front_suspension"
        app:layout_constraintTop_toBottomOf="@+id/button_front_wheel"
        app:strokeColor="@color/HollywoodCerise"
        app:strokeWidth="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>